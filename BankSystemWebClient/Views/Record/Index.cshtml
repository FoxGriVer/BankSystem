
@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="center-block">
        <h3 class="text-center">Панель управления записями</h3>
        <div class="text-center">
            <form asp-controller="Record" asp-action="RepresentReport" method="get" class="col-md-4 col-md-offset-4 ourBtns">
                <button type="submit" class="btn btn-primary">Просмотреть отчетность за конкретный период</button>
            </form>
            <form asp-controller="Record" asp-action="ViewAll" method="get" class="col-md-4 col-md-offset-4 ourBtns">
                <button type="submit" class="btn btn-primary">Просмотреть все записи</button>
            </form>
        </div>
    </div>
</div>

<style>
    .ourBtns {
        margin-top: 2%;
    }
</style>

